<div class="py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-extrabold text-orange-600 mb-8 text-center">Contact Messages</h1>

    <% if @messages.empty? %>
      <p class="text-center text-gray-600">No messages yet.</p>
    <% else %>
      <div class="space-y-6">
        <% @messages.each do |message| %>
          <div class="bg-white shadow-xl rounded-2xl p-6 border-l-4 border-orange-400 hover:scale-105 transition duration-300">
            <div class="flex justify-between">
              <div>
                <h2 class="text-xl font-semibold text-gray-800"><%= message.author %></h2>
                <p class="text-sm text-gray-500">
                  <%= message.email %>
                  <% if message.phone.present? %> | <%= message.phone %> <% end %>
                </p>
              </div>
                <%= button_to contact_path(message), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this message? This action cannot be undone." }, class: "text-red-600 hover:text-red-800 font-medium text-sm flex items-center gap-1" do %>
                <i class="fa-solid fa-trash"></i>
                <% end %>
            </div>
            <p class="mt-4"><%= message.body %></p>
            <p class="mt-2 text-xs text-gray-400">Received <%= time_ago_in_words(message.created_at) %> ago</p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
