<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold text-gray-800">Our Menu</h1>
    <%= link_to "New Product", new_product_path, class: "bg-green-100 text-green-700 hover:bg-green-200 transition font-semibold py-2 px-4 rounded-md text-sm shadow-sm" %>
  </div>

  <% @products.categories.keys.each do |category| %>
    <% products = @products.where(category: category) %>
    <% next if products.empty? %>

    <div class="mb-10">
      <h2 class="text-2xl font-semibold text-gray-700 mb-4 capitalize border-b border-gray-200 pb-1">
        <%= category.gsub("_", " ") %>
      </h2>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% products.each do |product| %>
          <div class="bg-white border border-gray-100 rounded-2xl shadow hover:shadow-md transition duration-200 p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-2"><%= product.title %></h3>
            <p class="text-sm text-gray-600 mb-2"><%= product.ingredients %></p>
            <span class="inline-block mt-2 text-xs px-3 py-1 bg-yellow-100 text-yellow-700 rounded-full uppercase tracking-wide font-medium">
              <%= product.category.humanize %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
