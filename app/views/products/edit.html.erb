<%= content_for :title, "Edit Product" %>
<main class="py-10">
  <h1 class="text-5xl text-gray-700 font-extrabold text-center">Edit Product</h1>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= render "form" %>
      <div class="items-center text-center mt-8">
      <%= button_to "Delete Product", product_path(@product), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "rounded-md px-3 py-2 text-sm font-semibold text-white bg-red-600 hover:bg-red-400" %>
      </div>
    </div>
  </div>
</main>
  