<div class="relative overflow-hidden">
    <div class="absolute inset-0">
        <%= image_tag "mural.png", alt: "shaved ice background", class: "size-full object-cover" %>
    </div>
    <div class="relative bg-gray-900/75 px-6 py-32 sm:px-12 sm:py-40 lg:px-16">
        <div class="relative mx-auto flex max-w-3xl flex-col items-center text-center">
            <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
              <span class="block sm:inline">Calories don’t count when it’s Just-A-Craving.</span>
            </h2>
            <h1 class="text-2xl font-bold tracking-tight text-white sm:text-2xl">
              <span class="block sm:inline text-amber-300">Gourmet Latin Infused Shaved Ice</span>
            </h1>
              <%= link_to "See Menu", products_path, class: "mt-8 block w-full rounded-md border border-transparent bg-white px-8 py-3 text-xl font-semibold text-gray-900 hover:bg-gray-100 sm:w-auto" %>
        </div>
    </div>
</div>

<div class="max-w-5xl mx-auto px-6 lg:px-8 py-16">
<h2 class="text-4xl font-bold text-center text-gray-900 mb-12">
  Some reviews from our <span class="text-red-500">Cravers!</span>
</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      <% @reviews.each_with_index do |review, index| %>
        <% next if index == 1 %>
        <div class="flex flex-col bg-white rounded-2xl shadow p-6 border border-gray-100">
          <div class="flex items-center space-x-4 mb-4">
            <% if review.author.avatar.present? %>
              <img src="<%= review.author.avatar %>" alt="<%= review.author.name %>'s avatar" class="w-12 h-12 rounded-full object-cover bg-gray-100">
            <% else %>
              <div class="w-12 h-12 rounded-full bg-gray-200"></div>
            <% end %>
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= review.author.name %></h3>
              <p class="text-xs text-gray-500"><%= review.relative_time %></p>
            </div>
          </div>

          <div class="flex items-center space-x-1 text-yellow-400 mb-2">
            <% 5.times do |i| %>
              <i class="fa-solid fa-star"></i>
            <% end %>
          </div>
          <p class="text-sm text-gray-500 ml-0.5 font-medium"><%= review.rating %> out of 5 stars</p>
          <p class="text-gray-700 text-sm mt-3">
            <%= review.content %>
          </p>
        </div>
      <% end %>
    </div>
</div>

<div class="relative">
  <div class="absolute inset-0">
    <%= image_tag "ourstory.png", class: "size-full object-cover" %>
    <div class="absolute inset-0 bg-gray-900/40 backdrop-blur-sm"></div>
  </div>

